<%- include('studentnav') -%>
<br/>
<div class="container" style="min-width:23px;max-width: 60rem;">
    <% include ./partials/messages %>
    <form action = '/student/feedback' method = "post">
    
        <div class="form-group">
            <label for="exampleFormControlSelect1">Select teacher to give feedback</label>
            <select class="form-control" id="exampleFormControlSelect1"name ="teacherid">
                <% console.log(teacherlist) %> 
                
                   <% for(i=0;i<teacherlist.length;i++) { %>
                        <option value="<%= teacherlist[i]._id %>"> <%= teacherlist[i].name %></option>
                        <% } %>
            </select>   
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="titled" id="exampleRadios1" value="true" checked>
            <label class="form-check-label" for="exampleRadios1">
              Titled
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="titled" id="exampleRadios1" value="false">
            <label class="form-check-label" for="exampleRadios1">
              Non-Titled
            </label>
          </div>
          <div class="form-group">
            <label for="exampleFormControlTextarea1">Enter Feedback </label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" name="feedbacknote"></textarea>
          </div>
          <button class="btn btn-primary btn-block" type="submit">Send Feedback</button>
        
          </form>
</div>