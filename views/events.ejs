<div class="container">
    
    <form action ="/student/events" method="post">
        
        <%if (events.length>0) {%>
    <p class="display-4">Upcoming Events,</p>
        </div>
    <%}%>
    <% if(events) {%>
        <% console.log() %>
    <div class="list-group">
      <%for(i=0;i<events.length;i++) {%>
        
        <div class="card" style="min-width: 23rem;">
            <input type="radio" name="eventid" value="<%=events[i]._id%>">
            <div class="card-body">
              <h5 class="card-title"><%=events[i].EventName%></h5>
              <% pd = events[i].StartDate%>
              <%startdate = pd.getDate()+'-'+pd.getMonth()+1+'-'+pd.getFullYear()+' ('+pd.getHours()+':'+pd.getMinutes()+') '%>
              <% ed = events[i].EndDate%>
              <%enddate = ed.getDate()+'-'+ed.getMonth()+1+'-'+ed.getFullYear()+' ('+ed.getHours()+':'+ed.getMinutes()+') '%>
              
              <p class="card-subtitle mb-2 text-muted small"><%=startdate%> to <%=enddate%></p>
              <p class="card-text"><%=events[i].Note%></p>
             <input class="form-control" name="note" type="textarea" value="I want to Join the Event: <%= events[i].EventName %> from <%=startdate %> to <%= enddate %> "
            </div>
          </div>
          <br/>
         
      <% } %>
      <% } %>
    </div>
    <%if (events.length>0) {%>
    <button type="submit" class="btn btn-primary btn-block" >Request Permission</button>
    <% }else{%>
        <p class="display-4">No Events</p>
    <%}%>
    </form>
    </div>